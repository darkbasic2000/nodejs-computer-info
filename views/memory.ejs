<%- include('./partials/head.ejs') %>
<body>
    
    <div class="container">
        <%- include('./partials/nav.ejs') %>
        <div class="container mt-3">
            <div class="row">
                <div class="card text-center" style="height: 100%;" title="Memory">
                    <div class="mt-2"><i class="fa-solid fa-memory fa-5x"></i></div>
                    <div class="card-body">
                      <h5 class="card-title">Memory</h5>
                      <div class="card-text" style="height: 100%;">
                        <div class="container w-25">
                            <div class="col-12 text-start ps-4">Free memory (GB): <%= (freemem / 1024 / 1024 / 1024).toFixed(3) %></div>
                            <div class="col-12 text-start ps-4">Free memory (MB): <%= (freemem /1024 / 1024).toFixed(3) %></div>
                            <div class="col-12 text-start ps-4">Total memory (GB): <%= (totalmem / 1024 / 1024 / 1024).toFixed(3) %></div>
                            <div class="col-12 text-start ps-4">Total memory (MB): <%= (totalmem /1024 / 1024).toFixed(3) %></div>
                        </div>                       
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>