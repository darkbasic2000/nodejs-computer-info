<%- include('./partials/head.ejs') %>
<body>
    
    <div class="container">
        <%- include('./partials/nav.ejs') %>
        <div class="container mt-3">
            <div class="row">
                <div class="card text-center" style="height: 100%;" title="Central Processing Unit">
                    <div class="mt-2">
                        <i class="fa-solid fa-microchip fa-5x"></i>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title">CPU</h5>
                      <div class="card-text" style="height: 100%;">
                            <p>CPU architecture: <%= arch %></p>
                            <p>Models:</p> 
                                <% cpus.forEach(cpu => { %>
                                <p><%= cpu.model %> | <%= cpu.speed %> MHz</p>
                            <% }) %>
                      </div>                      
                    </div>
                </div>
            </div>            
        </div>
    </div>

</body>

</html>